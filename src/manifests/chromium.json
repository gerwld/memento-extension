{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.1.0",
  "version_name": "1.1.0 Stable",
  "default_locale": "en",
  "icons": {
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "128": "assets/icons/icon128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/scripts/content.js",
        "assets/scripts/tools/settings.js",
        "assets/scripts/tools/locales.js",
        "assets/styles/fonts/noto_sans.css",
        "assets/styles/fonts/roboto.css",
        "assets/styles/fonts/poppins.css",
        "assets/styles/fonts/playfair.css",
        "assets/styles/fonts/merriweather.css",
        "assets/styles/fonts/noto_sans.css",
        "assets/styles/fonts/nunito.css",
        "assets/styles/fonts/montserrat.css",
        "assets/styles/fonts/pixelify.css",
        "assets/styles/fonts/gabarito.css",
        "assets/styles/fonts/roboto_condensed.css",
        "assets/styles/fonts/inter.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "assets/scripts/background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ]
}